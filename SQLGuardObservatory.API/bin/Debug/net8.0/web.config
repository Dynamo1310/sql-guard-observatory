<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <!-- 
        Configuración de Windows Authentication para SQL Guard Observatory
        Esta configuración permite autenticación de Windows para el endpoint /api/auth/windows-login
        mientras mantiene el acceso anónimo para otros endpoints
      -->
      
      <handlers>
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
      
      <aspNetCore processPath="dotnet" 
                  arguments=".\SQLGuardObservatory.API.dll" 
                  stdoutLogEnabled="true" 
                  stdoutLogFile=".\logs\stdout" 
                  hostingModel="inprocess">
        <environmentVariables>
          <environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Production" />
        </environmentVariables>
      </aspNetCore>

      <!-- Configuración de autenticación -->
      <security>
        <authentication>
          <!-- Habilitar Windows Authentication -->
          <windowsAuthentication enabled="true">
            <providers>
              <clear />
              <!-- Negociate (Kerberos) es la primera opción -->
              <add value="Negotiate" />
              <!-- NTLM como fallback -->
              <add value="NTLM" />
            </providers>
          </windowsAuthentication>
          
          <!-- Habilitar Anonymous Authentication para endpoints públicos -->
          <anonymousAuthentication enabled="true" />
        </authentication>
      </security>

      <!-- Habilitar CORS para solicitudes del frontend -->
      <httpProtocol>
        <customHeaders>
          <add name="Access-Control-Allow-Origin" value="http://asprbm-nov-01:8080" />
          <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS" />
          <add name="Access-Control-Allow-Headers" value="Content-Type, Authorization" />
          <add name="Access-Control-Allow-Credentials" value="true" />
        </customHeaders>
      </httpProtocol>

      <!-- Configuración de módulos -->
      <modules>
        <remove name="WebDAVModule" />
      </modules>

    </system.webServer>
  </location>
</configuration>

